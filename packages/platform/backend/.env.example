# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# Default values match docker-compose.yml at project root
# Note: Port 5433 is used to avoid conflict with local PostgreSQL (if installed)
DATABASE_URL=postgresql://s4kit:s4kit_dev_password@localhost:5433/s4kit

# Docker Compose Database Configuration (optional, used by docker-compose.yml)
POSTGRES_USER=s4kit
POSTGRES_PASSWORD=s4kit_dev_password
POSTGRES_DB=s4kit
POSTGRES_PORT=5433

# Optional: pgAdmin Configuration (for database management UI)
PGADMIN_EMAIL=admin@s4kit.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Optional: API Keys / Secrets
