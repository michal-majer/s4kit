{
  "name": "s4kit-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/platform/*"
  ],
  "scripts": {
    "dev:platform": "lsof -ti:3000,3001 | xargs kill -9 2>/dev/null; (cd packages/platform/backend && bun run dev) & (cd packages/platform/frontend && bun run dev) & wait",
    "build": "bun run build --filter '*'",
    "test": "bun test"
  },
  "dependencies": {
    "drizzle-orm": "0.45.1"
  },
  "overrides": {
    "drizzle-orm": "0.45.1"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^22",
    "tsup": "^8.5.1",
    "@types/bun": "^1.3.9"
  }
}
